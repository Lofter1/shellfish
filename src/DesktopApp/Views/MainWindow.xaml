<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DesktopApp.ViewModels;assembly=DesktopApp"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DesktopApp.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="shellfish">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Button.AddAsset">
            <Setter Property="FontSize" Value="38" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="60" />
        </Style>

        <Style Selector="StackPanel.Collection">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="10" />
        </Style>
        
        <Style Selector="TextBox.Search">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Padding" Value="0, 10, 0, 0" />
            <Setter Property="Width" Value="200" />
        </Style>
    </Window.Styles>

    <StackPanel>
        <TabControl>
            <TabItem Header="Books">
                <StackPanel Classes="Collection">
                    <Button Classes="AddAsset">+</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Podcasts">
                <StackPanel Classes="Collection">
                    <Button Classes="AddAsset">+</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Slides">
                <StackPanel Classes="Collection">
                    <Button Classes="AddAsset">+</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Videos">
                <StackPanel Classes="Collection">
                    <Button Classes="AddAsset">+</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Blogposts">
                <StackPanel Classes="Collection">
                    <Button Classes="AddAsset">+</Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
